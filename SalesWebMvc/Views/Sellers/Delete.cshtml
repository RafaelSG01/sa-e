@model SalesWebMvc.Models.Seller
@{
    ViewData["Title"] = "Apagar";
}

<h2>@ViewData["Title"]</h2>

<h3>Tem certeza que quer apagar esse vendedor?</h3>

<div>
    <h4>Vendedor</h4>
    <dl>
        <dt>Nome</dt>
        <dd>@Html.DisplayFor(viewModel => viewModel.Name)</dd>
        <dt>E-mail</dt>
        <dd>@Html.DisplayFor(viewModel => viewModel.Email)</dd>
        <dt>Data de Nascimento</dt>
        <dd>@Html.DisplayFor(viewModel => viewModel.BirthDate)</dd>
        <dt>Salário Base</dt>
        <dd>@Html.DisplayFor(viewModel => viewModel.BaseSalary)</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-default">Voltar para a Lista</a>
    </form>
</div>
